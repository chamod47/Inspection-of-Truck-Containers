<Window x:Class="Custome_Department_Truck_Inspection_System.CargoLoadInspectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Custome_Department_Truck_Inspection_System"
        mc:Ignorable="d"
        Title="CargoLoadInspectionWindow" Height="550" Width="350">
    <Grid>
        <TextBlock Text="Cargo and Load Inspection" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="16"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">

            <TextBlock Text="Cargo Type:"/>
            <ComboBox Name="CargoTypeComboBox" Width="200" Margin="5">
                <ComboBoxItem>Perishable</ComboBoxItem>
                <ComboBoxItem>Hazardous</ComboBoxItem>
                <ComboBoxItem>General Goods</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Load Security Mechanism:"/>
            <ComboBox Name="SecurityTextox" Width="200" Margin="5">
                <ComboBoxItem>Strap</ComboBoxItem>
                <ComboBoxItem>Chains</ComboBoxItem>
                <ComboBoxItem>Containers</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Weight Limit Compliance:"/>
            <TextBox Name="LimitTextBox" Width="200" Margin="5"/>

            <TextBlock Text="Hazardous Material Labels and Documentation:"/>
            <TextBox Name="DocTextBox" Width="200" Margin="5"/>




        </StackPanel>

        <Button Content="Save Cargo Inspection" Margin="120,364,116,128" Click="SaveCargoInspectionButton_Click"/>
        <Button Content="Back" Margin="120,433,120,64" Click="BackButton_Click"/>
    </Grid>
</Window>
