<Window x:Class="Custome_Department_Truck_Inspection_System.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Custome_Department_Truck_Inspection_System"
        mc:Ignorable="d"
        Title="AddUserWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Add User" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" FontSize="16"/>
        <StackPanel VerticalAlignment="Center" Width="300">
            <TextBlock Text="User Name: "/>
            <TextBox x:Name="AddUserTextBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="5"/>
            <TextBlock Text="Password:"/>
            <PasswordBox x:Name="PasswordBox" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Margin="5"/>

            <Button Content="Save" Width="100" Margin="10" Click="Button_Click"/>
            <Button Content="Back" Width="100" Margin="10" Click="BackButton_Click"/>
        </StackPanel>

    </Grid>
</Window>
